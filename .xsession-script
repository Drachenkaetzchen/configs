#!/bin/bash
# xmodmap einlesen
HOST=`uname -n`
export DE="generic"
export PATH=$PATH:~/local/eclipse:~/bin:~/local/ZendStudio
export GDK_NATIVE_WINDOWS=true

XMODMAP="${HOME}/.Xmodmap-$HOST"
I3STATUS="${HOME}/bin/i3status-$HOST.sh"
XRANDR="${HOME}/bin/xrandr-$HOST.sh"

$XRANDR
i3 -V > ~/.i3/log & i3pid=$!

autocutsel -fork
urxvtd -q -o -f

xsetroot -solid "#333333"

ssh-add ~/.ssh/id_dsa &
ssh-add ~/.ssh/id_rsa &

disable-touchpad.sh

xscreensaver &
xbindkeys

/usr/libexec/gnome-settings-daemon &

sleep 2

if [[ -f ${XMODMAP} ]]; then
	xmodmap $XMODMAP -v
fi

# i3status starten
bash ${I3STATUS}

chromium &
thunderbird &

wait $i3pid
